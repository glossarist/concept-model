class LocalizedConcept {
  definition {
    A managed term, localised to a speficic language.
  }
  +language: Iso639ThreeCharCode {
    definition {
      The language of the localisation, as an ISO-639 3-letter code.
    }
  }
  +script: Iso15924Code [0..1] {
    definition {
      The script of the localisation, as an ISO-15924 code.
    }
  }
  +concept: Concept {
    definition {
      The localised version of the managed term.
    }
  }
}
